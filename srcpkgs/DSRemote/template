post_install() {
	# fix udev rule path
	mkdir -p ${DESTDIR}/usr/lib/udev/rules.d
	mv ${DESTDIR}/etc/udev/rules.d/30-usbtmc.rules \
	    ${DESTDIR}/usr/lib/udev/rules.d
	rm -rf ${DESTDIR}/etc/udev/rules.d
}
